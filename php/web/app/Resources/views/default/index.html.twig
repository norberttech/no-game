{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Welcome
                </div>
                <div class="card-block">
                    <h4 class="card-title">Become one of {{ totalAccounts }} players</h4>
                    <p class="card-text">NoGame is free massive multiplayer online role-playing game.</p>
                    <a href="{{ url('nogame_registration') }}" class="btn btn-primary">Register</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Top 10 Characters
                </div>
                <div class="card-block">
                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Experience</th>
                        </tr>
                        {% for character in top10 %}
                        <tr>
                            <td>{{ character.name }}</td>
                            <td>{{ character.experience }}</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="2">
                                Become one of best NoGame players!
                            </td>
                        </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
