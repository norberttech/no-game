{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6 text-center">
            <div id="login" class="card">
                <div class="card-header">
                    <h4>{{ 'layout.login'|trans }}</h4>
                </div>
                <div class="card-block">
                        <form action="{{ path('nogame_login_check') }}" method="post">
                            <div class="form-group row">
                                <label for="username" class="col-4 col-form-label text-right">{{ 'security.login.form.username'|trans }}</label>
                                <div class="col-8">
                                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-4 col-form-label text-right">{{ 'security.login.form.password'|trans }}</label>
                                <div class="col-8">
                                    <input class="form-control" type="password" id="password" name="_password" />
                                </div>
                            </div>
                            {% if error %}
                            <div class="form-group text-center">
                                <ul class="list-unstyled mb-0 text-danger">
                                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                                </ul>
                            </div>
                            {% endif %}
                            <div class="form-group">
                                <button class="btn btn-secondary" type="submit">{{ 'layout.login'|trans }}</button>

                                <a href="{{ url('nogame_registration') }}" class="btn btn-success">{{ 'layout.register'|trans }}</a>

                                <input type="hidden" name="_target_path" value="{{ url('nogame_account') }}" />
                                <input type="hidden" name="_failure_path" value="{{ url('nogame_login') }}" />
                            </div>
                        </form>
                    </div>
            </div>
        </div>
        <div class="col-lg-3">
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    #login {
        margin-top: 50px;
        margin-bottom: 50px;
    }
</style>
{% endblock %}